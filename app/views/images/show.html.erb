<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<div class="container">
  <div class="row">

    <h1>Image Details</h1>

    <div class="row">
      <div class="col-4">
        <table class="table-primary">
          <tr>
            <th>Name</th>
            <td><%= @image.name %></td>
          </tr>
          <tr>
            <th>Alt Text</th>
            <td><%= @image.alt_text %></td>
          </tr>
          <tr>
            <th>Category</th>
            <td><%= @image.category %></td>
          </tr>
        </table>
      </div>
      <div class="col-4">
        <%= image_tag url_for(@image.file), :class => "img-thumbnail" %>
      </div>
    </div>


    <div class="btn-group">
      <%= link_to "Back to Gallery", new_image_path(@image), :class => "btn btn-primary" %>
      <%= link_to "Edit", edit_image_path(@image), :class => "btn btn-warning" %>
      <%= link_to "Remove image and details", image_path(@image), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      }, :class => "btn btn-danger" %>
    </div>
  </div>
</div>